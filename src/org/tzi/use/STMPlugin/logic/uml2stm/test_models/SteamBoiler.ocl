import 'SteamBoiler.uml'
package SteamBoiler

context SteamBoiler
	inv openMeansInitialized: self.valveOpen=open implies self.program.mode=Initialization
	
context WaterLevelMeasurementDevice
	inv: self.waterLevel < self.sb.capacity
	
context WaterLevelMeasurementDevice::getLevel() : Real
	pre: not self.oclIsUndefined()
	post: self.waterLevel > '0'

context PumpController::OpenPump() : Void
	pre: self.pump.mode = closed
	post: self.pump.mode = open
	
endpackage